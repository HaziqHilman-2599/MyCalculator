<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#989494"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvEquation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="0"
            android:textColor="#FAFAFA"
            android:textStyle="bold"
            android:padding="50dp"
            android:textSize="50sp" />
        <TextView
            android:id="@+id/tvAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#FAFAFA"
            android:textStyle="bold"
            android:padding="50dp"
            android:textSize="50sp" />
    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAC"
                android:backgroundTint="#D8D4D4"
                android:gravity="center"
                android:onClick="onBtnClick"
                android:text="AC"
                android:textColor="@android:color/black"/>
            <Button
                android:id="@+id/btnNegativePositive"
                android:gravity="center"
                android:backgroundTint="#D8D4D4"
                android:textColor="@android:color/black"
                android:onClick="onBtnClick"
                android:text="+/-"
                />
            <Button
                android:id="@+id/btnModulus"
                android:text="%"
                android:backgroundTint="#D8D4D4"
                android:textColor="@android:color/black"
                android:onClick="onBtnClick"
                android:gravity="center"
                />

            <Button
                android:id="@+id/btnDivide"
                android:backgroundTint="#FF6600"
                android:gravity="center"
                android:layout_weight="1"
                android:text="/" />
        </TableRow>
        <TableRow
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:backgroundTint="#D8D4D4"
                android:textColor="@android:color/black"
                android:onClick="onBtnClick"
                android:gravity="center"
                />
            <Button
                android:id="@+id/btn8"
                android:gravity="center"
                android:backgroundTint="#D8D4D4"
                android:textColor="@android:color/black"
                android:onClick="onBtnClick"
                android:text="8"
                />
            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:gravity="center"
                android:backgroundTint="#D8D4D4"
                android:textColor="@android:color/black"
                android:onClick="onBtnClick"
                />
            <Button
                android:id="@+id/btnMultiply"
                android:gravity="center"
                android:text="*"
                android:backgroundTint="#FF6600"
                android:layout_weight="1"
                android:layout_span="2"
                />
        </TableRow>
        <TableRow
            android:id="@+id/row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn4"
                android:text="4"
                android:backgroundTint="#D8D4D4"
                android:textColor="@android:color/black"
                android:onClick="onBtnClick"
                android:gravity="center"
                />
            <Button
                android:id="@+id/btn5"
                android:gravity="center"
                android:backgroundTint="#D8D4D4"
                android:textColor="@android:color/black"
                android:onClick="onBtnClick"
                android:text="5"
                />
            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:backgroundTint="#D8D4D4"
                android:textColor="@android:color/black"
                android:onClick="onBtnClick"
                android:gravity="center"
                />
            <Button
                android:id="@+id/btnMinus"
                android:gravity="center"
                android:backgroundTint="#FF6600"
                android:layout_span="2"
                android:layout_weight="1"
                android:text="-"
                />
        </TableRow>
        <TableRow
            android:id="@+id/row4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:backgroundTint="#D8D4D4"
                android:textColor="@android:color/black"
                android:onClick="onBtnClick"
                android:gravity="center"
                />
            <Button
                android:id="@+id/btn2"
                android:gravity="center"
                android:backgroundTint="#D8D4D4"
                android:textColor="@android:color/black"
                android:onClick="onBtnClick"
                android:text="2"
                />
            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:backgroundTint="#D8D4D4"
                android:textColor="@android:color/black"
                android:onClick="onBtnClick"
                android:gravity="center"
                />
            <Button
                android:id="@+id/btnPlus"
                android:gravity="center"
                android:backgroundTint="#FF6600"
                android:layout_span="2"
                android:layout_weight="1"
                android:text="+"
                />
        </TableRow>
        <TableRow
            android:id="@+id/row5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:backgroundTint="#D8D4D4"
                android:textColor="@android:color/black"
                android:onClick="onBtnClick"
                android:gravity="center"
                android:layout_span="2"
                />

            <Button
                android:id="@+id/btnDot"
                android:text="."
                android:backgroundTint="#D8D4D4"
                android:textColor="@android:color/black"
                android:onClick="onBtnClick"
                android:gravity="center"
                />
            <Button
                android:id="@+id/btnEquals"
                android:gravity="center"
                android:backgroundTint="#FF6600"
                android:onClick="onBtnClick"
                android:layout_span="2"
                android:layout_weight="1"
                android:text="="
                />
        </TableRow>
    </TableLayout>
</LinearLayout>